generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "cockroachdb"
  url      = env("DATABASE_URL")
}

model Book {
  bookId         Int    @id @default(sequence())
  title          String
  authorName     String
  authorLastName String
  pages          Int
  publisher      String
  publishYear    Int
  review         String
  cover          String
  status         Status
}

enum Status {
  READ
  PENDING
  READING
}
